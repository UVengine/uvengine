version: "{{ SpecificationVersion }}"
name: {{ ProjectName }}
services:
    {% for service in Services %}
        {{ service.ServiceName }}:
            {% if service.Image %}
                image: {{ service.Image }}
            {% endif %}
            {% if service.Build %}
                build: {% if service.BuildContext %} {% include 'subtemplates/context_string_template.yaml' %} {% endif %}
                {% if not service.BuildContext %}
                    context: {% include 'subtemplates/context_string_template.yaml' %}
                    {% if service.DockerFile %}
                    dockerfile: {{ service.DockerFile }}
                    {% endif %}
                    {% if service.InlineDockerFile %}
                    dockerfile_inline: |
                        {{ service.InlineDockerFile }}
                    {% endif %}
                {% endif %}
            {% endif %}
    {% endfor %}
